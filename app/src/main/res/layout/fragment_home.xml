<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/miTienda"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_title"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/home_store_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/vector_person"
                        app:shapeAppearanceOverlay="@style/roundImage">

                    </com.google.android.material.imageview.ShapeableImageView>
<!--                    <ImageView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="150dp"-->
<!--                        android:src="@drawable/vector_person"/>-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                    <TextView
                        android:id="@+id/home_store_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dirección Aquí"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/home_store_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción"
                        android:layout_marginStart="@dimen/margin_home_description"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</FrameLayout>